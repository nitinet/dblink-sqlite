{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"incremental": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"outDir": "./src"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}